<% if @firearm.pictures.nil? %>
<% else %>
<p class="imglist carousel_wrap" style="max-width: 1000px;">
 <% @firearm.pictures.each do |slide| %>
 <% cap = slide.author.blank? ? "#{slide.summary}" : "Â© #{slide.author} #{slide.summary}" %>
 <%= link_to image_tag(slide.image.url(:thumb)), slide.image.url(:large), data: { fancybox: "gallery", caption: cap }, class:"carousel_item"  %>
<% end %>
</p>

<% end %>


<br>
