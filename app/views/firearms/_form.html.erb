<%= simple_form_for @firearm, defaults: { required: false } do |f| %>
  <% if firearm.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(firearm.errors.count, "error") %> prohibited this firearm from being saved:</h2>

      <ul>
      <% firearm.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="editing-block">
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="row">
        <div class="column_field">

  <div class="field">
    <%= f.label :typearm %>
    <%= f.text_field :typearm %>
  </div>

  <div class="field">
    <%= f.label "Status" %>
    <%= f.text_field :atstus %>
  </div>

  <div class="field">
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>

  <div class="field">
    <%= f.label :year %>
    <%= f.number_field :year %>
  </div>

  <div class="field">
    <%= f.label :caliber %>
    <%= f.text_field :caliber %>
  </div>

  <div class="field">
    <%= f.label :action_type %>
    <%= f.text_field :action_type %>
  </div>

  <div class="field">
    <%= f.label :trigger_type %>
    <%= f.text_field :trigger_type %>
  </div>

  <div class="field">
    <%= f.label :feeding_mech %>
    <%= f.text_field :feeding_mech %>
  </div>

  <div class="field">
    <%= f.label "Barrel length" %>
    <%= f.number_field :barrel_l %>
  </div>

  <div class="field">
    <%= f.label "Overall length" %>
    <%= f.number_field :over_l %>
  </div>

  <div class="field">
    <%= f.label "Overall length (folded stock)" %>
    <%= f.number_field :over_l_f %>
  </div>

  <div class="field">
    <%= f.label "Empty weght"%>
    <%= f.number_field :em_w %>
  </div>

  <div class="field">
    <%= f.label "Loaded weght" %>
    <%= f.number_field :l_w %>
  </div>

  <div class="field">
    <%= f.label "Magazine capacity" %>
    <%= f.number_field :am_cap %>
  </div>

  <div class="field">
    <%= f.label :rate_of_fire %>
    <%= f.number_field :rate_of_fire, class: :text_field, step: :any %>
  </div>

  <div class="field">
    <%= f.label "Frame material" %>
    <%= f.text_field :fr_mat %>
  </div>

  <div class="field">
    <%= f.label :stock_type %>
    <%= f.text_field :stock_type %>
  </div>
  </div>

  <div class="column_field">
          <%= f.fields_for :additional_fire do |fire| %>
            <%= render 'fire_fields', :f => fire %>
          <% end %>
  </div>
</div>



  <div class="field">
    <%= f.label :summary %>
    <%= f.text_area :summary, 'data-provider': :summernote %>
  </div>
</div>
  <%= f.fields_for :pictures do |picture| %>
    <%= render 'picture_fields', :f => picture %>
  <% end %>
  <div class='links'>
    <%= link_to_add_association 'add picture', f, :pictures, class: "like-btn move-right" %>
  </div>



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
