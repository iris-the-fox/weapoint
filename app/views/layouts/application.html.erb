<!DOCTYPE html>
<html>
  <head>
    <title>Weapoint</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="sticky-top">



    <ul>
      <li ><%= link_to("WEAPOINT", root_path, :class => current_class?(root_path)) %></li>
      <li><%= link_to("NEWS", posts_path, :class => current_class?(posts_path)) %></li>
      <li><%= link_to("FIREARMS", firearms_path, :class => current_class?(firearms_path)) %></li>
      <li><%= link_to("AMMUNITION",  ammunitions_path, :class => current_class?(ammunitions_path)) %></li>
      <li><%= link_to("LEARNING", learnings_path, :class => current_class?(learnings_path)) %></li>
      <li><%= link_to("CONTACTS", contacts_path, :class => current_class?(contacts_path)) %></li>
      <% if logged_in? %>
      <li><%= link_to("ADMIN", admin_path, :class => current_class?(admin_path)) %></li>
      <li><%= link_to "Logout",  logout_path, method: :delete %></li>
      <% end %>

    </ul>
  </div>

    <div class="row equal">
      <div class="column1">
              
          <%= yield %>

      </div>
      <div class="column2">
          
          
     </div>
    </div>

  </body>
</html>

    
  
 

