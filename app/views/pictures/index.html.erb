<div class="row row-eq-height">
  <div class="column1_inner">

  </div>

  <div class="column2_inner">


    <table>
      <thead>
        <tr>
          <td>Belongs to</td>
          <td></td>
          <td>Author</td>
          <td>Summary</td>
    
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @pictures.each do |picture| %>
          <tr>
    
            <td><%= picture.imageable_type %> â„– <%= picture.imageable_id %></td>
            <td><%= image_tag( picture.image.url(:thumb)) %></td>
            <td><%= picture.author %></td>
            <td><%= raw picture.summary %></td>
            <td><%= link_to 'Show', picture %></td>
            <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
            <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <br>
    
    <%= link_to 'New Picture', new_picture_path %>
  </div>
</div>
     