<%= form_with(model: ammunition, local: true) do |form| %>
  <% if ammunition.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ammunition.errors.count, "error") %> prohibited this ammunition from being saved:</h2>

      <ul>
      <% ammunition.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class ="editing-block">

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :type_bul %>
    <%= form.text_field :type_bul %>
  </div>

  <div class="field">
    <%= form.label :country %>
    <%= form.text_field :country %>
  </div>

  <div class="field">
    <%= form.label :weight %>
    <%= form.number_field :weight %>
  </div>

  <div class="field">
    <%= form.label :speed %>
    <%= form.number_field :speed %>
  </div>

  <div class="field">
    <%= form.label :energy %>
    <%= form.number_field :energy %>
  </div>

  <div class="field">
    <%= form.label :note %>
    <%= form.text_field :note, 'data-provider': :summernote %>
  </div>
</div>

  <div class= "editing-block">

      <h2> Add picture </h2>
      <%= form.fields_for :pictures do |s| %>
        
        <div class="field">
          <%= s.label :title %>
          <%= s.text_field :title %>
        </div>
        <div class="field"> 
          <%= s.label :image %>
          <%= s.file_field :image %>
        </div>
        <div class="field">
          <%= s.label :author %>
          <%= s.text_field :author %>
        </div>
        <div class="field">
          <%= s.label :summary %>
          <%= s.text_area :summary, 'data-provider': :summernote %>
        </div>
